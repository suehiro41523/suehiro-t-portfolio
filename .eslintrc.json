{
  "parser": "@typescript-eslint/parser",
  "plugins": ["chakra-ui"],
  "parserOptions": {
    "project": true,
    "tsconfigRootDir": "__dirname"
  },
  "extends": ["next/core-web-vitals", "next", "prettier"],
  "rules": {
    "chakra-ui/props-order": "error",
    "chakra-ui/props-shorthand": "error",
    "chakra-ui/require-specific-component": "error"
  }
}
